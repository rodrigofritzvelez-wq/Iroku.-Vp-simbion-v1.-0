name: IrokuBuild

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Set up Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '20'

    - name: Set up JDK
      uses: actions/setup-java@v4
      with:
        java-version: '11'
        distribution: 'adopt'

    - name: Install Android SDK
      uses: android-actions/setup-android@v3
      with:
        api-level: 33
        build-tools: '33.0.0'

    - name: Install dependencies
      run: npm install @capacitor/core @capacitor/cli

    - name: Initialize Capacitor
      run: npx cap init Symbion com.symbion.app --web-dir="."

    - name: Add Android platform
      run: npx cap add android

    - name: Copy assets
      run: |
        mkdir -p android/app/src/main/assets/www
        cp index.html android/app/src/main/assets/www/

    - name: Add internet permission
      run: |
        sed -i '/<manifest /a <uses-permission android:name="android.permission.INTERNET"/>' android/app/src/main/AndroidManifest.xml

    - name: Build APK
      run: |
        cd android
        ./gradlew assembleRelease

    - name: Upload APK
      uses: actions/upload-artifact@v4
      with:
        name: iroku-ultra-light-apk
        path: android/app/build/outputs/apk/release/app-release-unsigned.apk
        retention-days: 7
